{
  "name": "gl-layer",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "turbo run clean --filter=@maptalks/*",
    "dev": "turbo run dev --filter=@maptalks/*",
    "build": "turbo run build --filter=@maptalks/*",
    "build-dev": "turbo run build-dev --filter=@maptalks/*",
    "lint": "turbo run lint --filter=@maptalks/*",
    "prettier": "prettier --parser=typescript --write **/*.{js,ts,md}",
    "test": "turbo run test --filter=@maptalks/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fuzhenn/gl-layers.git"
  },
  "devDependencies": {
    "@types/node": "^18.6.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "turbo": "^2.0.0"
  },
  "engines": {
    "node": ">=18.16.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "packageManager": "pnpm@9.6.0",
  "license": "MIT"
}
